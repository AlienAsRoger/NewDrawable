<?xml version="1.0" encoding="utf-8"?>
<resources>


	<declare-styleable name="RoboButton">
		<attr name="btn_radius" format="reference|dimension" />
		<!--Common button radius-->
		<attr name="btn_is_solid" format="reference|boolean" />
		<attr name="btn_use_border" format="reference|boolean" />
		<attr name="btn_use_pressed_layer" format="reference|boolean" />

		<attr name="btn_padding" format="reference|dimension" />
		<attr name="btn_bevel_lvl" format="reference|integer" />
		<attr name="btn_bevel_inset" format="reference|dimension" />
		<attr name="btn_is_rect" format="reference|boolean" />
		<attr name="btn_is_glassy" format="reference|boolean" />
		<attr name="btn_is_clickable" format="reference|boolean" />

		<!--Default colors-->
		<attr name="btn_outer_border" format="reference|color" />
		<!--Outer border color-->
		<attr name="btn_top" format="reference|color" />
		<!--Top line bevel-->
		<attr name="btn_left" format="reference|color" />
		<!--Left line bevel-->
		<attr name="btn_right" format="reference|color" />
		<!--Right line bevel-->
		<attr name="btn_bottom" format="reference|color" />
		<!--Bottom line bevel-->
		<!--Level 2-->
		<attr name="btn_top_2" format="reference|color" />
		<attr name="btn_left_2" format="reference|color" />
		<attr name="btn_right_2" format="reference|color" />
		<attr name="btn_bottom_2" format="reference|color" />

		<attr name="btn_solid" format="reference|color" />
		<!--Button main solid-->
		<attr name="btn_gradient_start" format="reference|color" />
		<!--Button main gradient-->
		<attr name="btn_gradient_center" format="reference|color" />
		<attr name="btn_gradient_end" format="reference|color" />

		<!--Pressed colors-->
		<attr name="btn_top_p" format="reference|color" />
		<attr name="btn_left_p" format="reference|color" />
		<attr name="btn_right_p" format="reference|color" />
		<attr name="btn_bottom_p" format="reference|color" />

		<!--Level 2-->
		<attr name="btn_top_2_p" format="reference|color" />
		<attr name="btn_left_2_p" format="reference|color" />
		<attr name="btn_right_2_p" format="reference|color" />
		<attr name="btn_bottom_2_p" format="reference|color" />

		<!--Pressed-->
		<attr name="btn_solid_p" format="reference|color" />
		<!--Button main solid pressed-->
		<attr name="btn_gradient_start_p" format="reference|color" />
		<!--Button main gradient-->
		<attr name="btn_gradient_center_p" format="reference|color" />
		<attr name="btn_gradient_end_p" format="reference|color" />

		<!--Disabled colors-->
		<attr name="btn_top_d" format="reference|color" />
		<attr name="btn_left_d" format="reference|color" />
		<attr name="btn_right_d" format="reference|color" />
		<attr name="btn_bottom_d" format="reference|color" />

		<attr name="btn_solid_d" format="reference|color" />
		<!--Button main solid pressed-->
		<attr name="btn_gradient_start_d" format="reference|color" />
		<!--Button main gradient-->
		<attr name="btn_gradient_center_d" format="reference|color" />
		<attr name="btn_gradient_end_d" format="reference|color" />

		<!--Selected-->
		<attr name="btn_solid_s" format="reference|color" />
		<!--Button main solid pressed-->


		<attr name="btn_gradient_angle">
			<enum name="TOP_BOTTOM" value="0" />
			<enum name="TR_BL" value="1" />
			<enum name="RIGHT_LEFT" value="2" />
			<enum name="BR_TL" value="3" />
			<enum name="BOTTOM_TOP" value="4" />
			<enum name="BL_TR" value="5" />
			<enum name="LEFT_RIGHT" value="6" />
			<enum name="TL_BR" value="7" />
		</attr>

		<attr name="btn_rect_pos">
			<enum name="topLeft" value="0" />
			<enum name="topMiddle" value="1" />
			<enum name="topRight" value="2" />

			<enum name="tabLeft" value="3" />
			<enum name="tabMiddle" value="4" />
			<enum name="tabRight" value="5" />

			<enum name="bottomLeft" value="6" />
			<enum name="bottomMiddle" value="7" />
			<enum name="bottomRight" value="8" />

			<enum name="listItem" value="9" />
			<enum name="listItemHeader" value="10" />
			<enum name="listItemHeader_2" value="11" />
			<enum name="listItemHeaderDark" value="12" />
			<enum name="listItemHeaderDark_2" value="13" />
			<enum name="listItemHeaderTop" value="14" />

			<enum name="sideLeft" value="15" />
			<enum name="sideMiddle" value="16" />
			<enum name="sideRight" value="17" />

			<enum name="tabletLeft" value="18" />
			<enum name="tabletMiddle" value="19" />
			<enum name="tabletRight" value="20" />

			<enum name="silverLeft" value="21" />
			<enum name="silverMiddle" value="22" />
			<enum name="silverRight" value="23" />

			<enum name="listItemWhite" value="24" />

			<enum name="rectGreyLeft" value="25" />
			<enum name="rectGreyMiddle" value="26" />
			<enum name="rectGreyRight" value="27" />
		</attr>

	</declare-styleable>


</resources>